<% provide(:title, "Редактирование профиля") %> 
<h1>Изменение данных профиля</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@teacher) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name, "Имя" %>
      <%= f.text_field :name %>

      <%= f.label :email, "Электронная почта" %>
      <%= f.text_field :email %>

      <%= f.label :password, "Пароль" %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Подтверждение пароля" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Сохранить", class: "btn btn-large btn-primary" %>
    <% end %>

    <%= gravatar_for @teacher %>
    <a href="http://gravatar.com/emails">изменить</a>
  </div>
</div>